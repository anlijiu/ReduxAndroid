<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reduxsample.MainActivity">

    <LinearLayout
        android:id="@+id/ll_left_container"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ToggleButton
            android:id="@+id/tbtn_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_toggle_btn"/>
        <ToggleButton
            android:id="@+id/tbtn_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_toggle_btn"/>
    </LinearLayout>

    <View
        android:id="@+id/stub"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_centerInParent="true"/>

    <FrameLayout
        android:id="@+id/container_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_left_container"
        android:layout_alignRight="@+id/stub">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/stub"
        android:layout_toLeftOf="@+id/ll_right_container" >

    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_right_container"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">
        <ToggleButton
            android:id="@+id/tbtn_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_toggle_btn"/>
        <ToggleButton
            android:id="@+id/tbtn_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_toggle_btn"/>
    </LinearLayout>

</RelativeLayout>
